<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <!-- Bootstrap Link -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
      <!-- Css link -->
      <link rel="stylesheet" href="/style2.css">       
    <title>Inventory Management</title>
</head>
<body>
 
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Inventory Management</a>
        </div>
        <div class="action">
            <div class="profile" onclick="menu();">
                <img src="/images/user.png" alt="">
            </div>
            <div class="menu">
              <h3><%=userName %></h3>
                <ul>
                  <li><a href="/<%=userName %>/profile">My Profile</a></li>
                  <li><a href="/<%=userName %>/update-profile">Update Profile</a></li>
                  <li><a href="/<%=userName %>/create-collection">Create Collection</a></li>
                  <li><a href="/<%=userName %>/Create-product">Create Product</a></li>
                  <li><a href="/<%=userName %>/Collection">Collections</a></li>
                  <li><a href="/Logout">Logout</a></li>
                </ul>
            </div>
        </div>
      </nav>
      <!-- Main body -->
      <div class="update">
        <h1>Update Product</h1>
        <form class="row g-3" action="/<%=userName %>/<%= collection%>/<%= productName%>/update" method="post">
            <div class="col-12">
              <label for="Cname" class="form-label">Product Name: </label>
              <input type="text" class="form-control" id="pname" name="pname" autocomplete="off" value="<%= productName%>" readonly>
            </div>
            <div class="col-12">
                <label for="ImageUrl" class="form-label">Image Url: </label>
              <input type="text" class="form-control" id="ImageUrl" name="url" autocomplete="off" value="<%= Url %>" required>
            </div>

            <div class="col-12">
                <label for="price" class="form-label">Price: </label>
              <input type="number" class="form-control" id="price" name="price" autocomplete="off" value="<%= price %>"  required>
            </div>

            <div class="col-12">
                <label for="quantity" class="form-label">Quantity: </label>
              <input type="number" class="form-control" id="quantity" name="quantity" autocomplete="off" value="<%= quantity %>" required>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary ">Update </button>
            </div>
          </form>
    </div>
</body>
<script>
    function menu(){
        const toogleMenu=document.querySelector('.menu')
        toogleMenu.classList.toggle('active')
    }
</script>
</html>
